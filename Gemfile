source 'https://rubygems.org'
ruby "2.0.0"

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

gem 'forem', :github => "radar/forem", :branch => "rails4"
gem 'friendly_id', github: "FriendlyId/friendly_id"
